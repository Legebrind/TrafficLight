<div className="rounded-circle w-50 h-25 mx-auto mt-5 bg-danger" id="red" onClick={()=>{setActiveRed(!activeRed);setActiveYellow(false);setActiveGreen(false),setActivePurple(false)}}></div>
            <div className="rounded-circle w-50 h-25 mx-auto mt-5 bg-warning" id="yellow" onClick={()=>{setActiveRed(false);setActiveYellow(!activeYellow);setActiveGreen(false);setActivePurple(!false)}}></div>
            <div className="rounded-circle w-50 h-25 mx-auto mt-5 purple" hidden id="purple"  onClick={()=>{setActiveRed(false);setActiveYellow(false);setActiveGreen(!activeGreen); setActivePurple(!activePurple)}}></div>
            <div className="rounded-circle w-50 h-25 mx-auto mt-5 bg-success" id="green" onClick={()=>{setActiveRed(false);setActiveYellow(false);setActiveGreen(!activeGreen);setActivePurple(false)}}></div>                        useEffect(()=>{
        showPurple ? delete document.getElementById("purple").hidden : document.getElementById("purple").hidden;
    },[showPurple])




   

    useEffect(()=>{
        if(activeRed){ 
            document.getElementById("red").classList.add("active");

        }else{
            document.getElementById("red").classList.remove("active");
        }
        if(activeYellow){ 
            document.getElementById("yellow").classList.add("active");

        }else{
            document.getElementById("yellow").classList.remove("active");
        }
        if(activeGreen){ 
            document.getElementById("green").classList.add("active");

        }else{
            document.getElementById("green").classList.remove("active");
        }
        if(activePurple){ 
            document.getElementById("purple").classList.add("active");

        }else{
            document.getElementById("purple").classList.remove("active");
        }
    },[activeGreen,activePurple,activeRed,activeYellow,activePurple]);
